<Window x:Class="MaxVolumeLock.PinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxVolumeLock"
        mc:Ignorable="d"
        Title="PinWindow" Height="214.267" Width="291.102">
    <Grid>
        <Label x:Name="titleLabel" Content="Provide PIN required for unlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="14" RenderTransformOrigin="0.637,-0.611"/>
        <Label x:Name="pinInputLabel" Content="PIN" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="31,50,0,0" FontSize="11" RenderTransformOrigin="0.637,-0.611"></Label>
        <PasswordBox x:Name="pinInput" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16" Width="100" Margin="31,79,0,0" TabIndex="0" MaxLength="4" Height="29"></PasswordBox>
        <TextBlock x:Name="pinInputErrorTextBlock" Text="Invalid PIN!" Visibility="Hidden" Foreground="MediumVioletRed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="147,79,0,0" FontSize="14" RenderTransformOrigin="0.637,-0.611"/>
        <Button x:Name="toggleLockWithPinButton" IsDefault="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="31,132,0,0" Height="30" Background="AliceBlue" Click="toggleLockWithPinButton_Click"/>
        <Button x:Name="cancelButton" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Cancel" Width="100" Margin="157,132,0,0" Height="30" Click="cancelButton_Click"/>        
    </Grid>
</Window>
